<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/grid_item_image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon1" />

    <TextView
        android:id="@+id/grid_item_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/grid_item_image1"
        android:layout_alignLeft="@+id/grid_item_image1"
        android:layout_alignRight="@+id/grid_item_image1"
        android:layout_alignTop="@+id/grid_item_image1"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@+id/label"
        android:textColor="@color/darvo"
        android:textSize="30dp" />

</RelativeLayout>
