<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="300dip" >

    <TextView
        android:id="@+id/ditext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="dititle"
        android:textColor="@color/darvo"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/direfresh1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/refresh" />

    <ImageView
        android:id="@+id/distar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/direfresh1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ditext1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/s1" />

    <ImageView
        android:id="@+id/dimenu1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/direfresh1"
        android:layout_alignLeft="@+id/distar1"
        android:src="@drawable/menu" />

    <ImageView
        android:id="@+id/difor1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/direfresh1"
        android:layout_alignRight="@+id/distar1"
        android:src="@drawable/forward" />

</RelativeLayout>